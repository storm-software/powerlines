{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Alloy Build Script",
      "type": "node",
      "request": "launch",
      "program": "/nix/store/kyfc6ga8ckzc0irgy69jc5slfgz1w3gk-pnpm-10.25.0/bin/pnpm",
      "args": [
        "nx",
        "run",
        "plugin-alloy:build:development",
        "--outputStyle=dynamic-legacy",
        "--skipNxCache"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Env Build Script",
      "type": "node",
      "request": "launch",
      "program": "/nix/store/kyfc6ga8ckzc0irgy69jc5slfgz1w3gk-pnpm-10.25.0/bin/pnpm",
      "args": [
        "nx",
        "run",
        "plugin-env:build:development",
        "--outputStyle=dynamic-legacy",
        "--skipNxCache"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "port": 6009,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/node_modules/@acidic/language/**/*.js"]
    }
  ]
}
