{
  "name": "plugin-alloy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/plugin-alloy/src",
  "targets": {
    "clean": {
      "executor": "@powerlines/nx:clean"
    },
    "prepare": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/.storm"],
      "executor": "@powerlines/nx:prepare",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/{projectRoot}"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "mode": "production"
        },
        "test": {
          "mode": "test"
        },
        "development": {
          "mode": "development",
          "skipCache": true,
          "logLevel": "trace"
        }
      }
    },
    "build-base": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "@powerlines/nx:build",
      "dependsOn": ["prepare", "build-base"],
      "options": {
        "outputPath": "dist/{projectRoot}"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "mode": "production"
        },
        "test": {
          "mode": "test"
        },
        "development": {
          "mode": "development",
          "skipCache": true,
          "logLevel": "trace"
        }
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "implicitDependencies": ["nx"]
}
