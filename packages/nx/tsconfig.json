{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "rootDir": "../..",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "strict": false,
    "outDir": "../../dist/out-tsc",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "executors.ts",
    "generators.ts",
    "index.ts",
    "**/*.json",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tsup.config.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
