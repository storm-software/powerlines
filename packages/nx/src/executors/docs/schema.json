{
  "id": "#",
  "title": "Docs Executor",
  "description": "A type definition for the Powerlines - Docs executor schema",
  "required": [],
  "properties": {
    "configFile": {
      "title": "Powerlines Configuration File",
      "type": "string",
      "format": "path",
      "description": "The path to the Powerlines configuration file",
      "id": "#configFile",
      "default": "{projectRoot}/powerlines.config.ts"
    },
    "input": {
      "title": "Input Entry File(s)",
      "format": "path",
      "type": "array",
      "description": "The entry file(s) that serve as the input for the project",
      "items": {
        "type": "string"
      },
      "id": "#input",
      "default": [
        "{sourceRoot}/index.ts"
      ]
    },
    "tsconfig": {
      "title": "TSConfig Path",
      "type": "string",
      "format": "path",
      "description": "The path to the tsconfig file",
      "id": "#tsconfig",
      "default": "{projectRoot}/tsconfig.json"
    },
    "outputPath": {
      "title": "Output Path",
      "type": "string",
      "format": "path",
      "description": "The path to the output directory for the build artifacts",
      "id": "#outputPath"
    },
    "sourceMap": {
      "title": "Sourcemap",
      "type": "boolean",
      "description": "Generate a sourcemap",
      "id": "#sourceMap"
    },
    "format": {
      "title": "Format",
      "type": "array",
      "description": "The format to build",
      "items": {
        "type": "string",
        "enum": [
          "cjs",
          "esm",
          "iife"
        ]
      },
      "id": "#format",
      "default": [
        "cjs",
        "esm"
      ]
    },
    "platform": {
      "title": "Platform",
      "type": "string",
      "description": "The platform to build",
      "enum": [
        "neutral",
        "node",
        "browser"
      ],
      "id": "#platform",
      "default": "neutral"
    },
    "external": {
      "title": "External",
      "type": "array",
      "description": "The external dependencies",
      "id": "#external",
      "default": [],
      "items": {
        "type": "any"
      }
    },
    "noExternal": {
      "title": "No External",
      "type": "array",
      "description": "The dependencies that should not be treated as external",
      "id": "#noExternal",
      "default": [],
      "items": {
        "type": "any"
      }
    },
    "skipNodeModulesBundle": {
      "title": "Skip Node Modules Bundle",
      "type": "boolean",
      "description": "Skip bundling node_modules during the build process (if required)",
      "id": "#skipNodeModulesBundle"
    },
    "mode": {
      "title": "Mode",
      "type": "string",
      "description": "The build mode",
      "enum": [
        "development",
        "test",
        "production"
      ],
      "id": "#mode"
    },
    "logLevel": {
      "title": "Log Level",
      "type": "string",
      "description": "The log level to use for the build process",
      "enum": [
        "fatal",
        "error",
        "warn",
        "success",
        "info",
        "debug",
        "trace",
        "silent"
      ],
      "id": "#logLevel"
    },
    "define": {
      "title": "Define",
      "type": "object",
      "tsType": "Record<string, string>",
      "description": "The `define` values",
      "id": "#define",
      "default": {}
    },
    "autoInstall": {
      "title": "Auto Install",
      "type": "boolean",
      "description": "Automatically install dependencies during prepare stage",
      "id": "#autoInstall"
    },
    "skipCache": {
      "title": "Skip Cache",
      "type": "boolean",
      "description": "Skip the caching mechanism during the build process (if required)",
      "id": "#skipCache"
    }
  },
  "type": "object",
  "default": {
    "configFile": "{projectRoot}/powerlines.config.ts",
    "input": [
      "{sourceRoot}/index.ts"
    ],
    "tsconfig": "{projectRoot}/tsconfig.json",
    "format": [
      "cjs",
      "esm"
    ],
    "platform": "neutral",
    "external": [],
    "noExternal": [],
    "define": {}
  }
}