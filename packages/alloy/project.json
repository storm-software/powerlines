{
  "name": "alloy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/alloy/src",
  "targets": {
    "clean": {
      "executor": "@powerlines/nx:clean"
    },
    "prepare": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/.storm"],
      "executor": "@powerlines/nx:prepare",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/{projectRoot}"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "mode": "production"
        },
        "test": {
          "mode": "test"
        },
        "development": {
          "mode": "development",
          "skipCache": true,
          "logLevel": "trace"
        }
      }
    },
    "build": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{options.outputPath}"],
      "executor": "@powerlines/nx:build",
      "dependsOn": ["prepare"],
      "options": {
        "outputPath": "dist/{projectRoot}"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "mode": "production"
        },
        "test": {
          "mode": "test"
        },
        "development": {
          "mode": "development",
          "skipCache": true,
          "logLevel": "trace"
        }
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "implicitDependencies": ["nx"]
}
