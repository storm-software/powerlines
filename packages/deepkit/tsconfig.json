{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "types": ["node"],
    "strict": false,
    "outDir": "../../dist/out-tsc"
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "scripts/**/*.ts",
    "tsup.scripts.ts",
    "tsup.schemas.ts",
    "tsup.config.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "reflection": true
}
