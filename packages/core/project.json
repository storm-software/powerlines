{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/core/src",
  "targets": {
    "build-base": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsdown --config=tsdown.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["{projectRoot}/dist"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/core",
          "pnpm copyfiles --up=2 ./packages/core/*.md ./packages/core/package.json dist/packages/core",
          "pnpm copyfiles --up=3 \"./packages/core/dist/*.js\" \"./packages/core/dist/*.d.ts\" \"./packages/core/dist/*.cjs\" \"./packages/core/dist/*.d.cts\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/types/**/*\" \"./packages/core/dist/lib/**/*\" \"./packages/core/dist/plugin-utils/**/*\" dist/packages/core/dist"
        ]
      }
    }
  },
  "tags": ["platform:node"]
}
