{
  "name": "powerlines",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/powerlines/src",
  "targets": {
    "generate-schemas": {
      "cache": true,
      "inputs": ["{projectRoot}/schemas/*.capnp"],
      "outputs": ["{projectRoot}/schemas/*.ts"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "commands": [
          "pnpm exec storm-capnpc --project-root packages/powerlines --schema packages/powerlines/schemas"
        ],
        "parallel": false
      }
    },
    "build-base": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "executor": "nx:run-commands",
      "dependsOn": ["generate-schemas", "clean", "^build"],
      "options": {
        "command": "tsdown --config=tsdown.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["{projectRoot}/dist"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/powerlines",
          "pnpm copyfiles --up=2 ./packages/powerlines/*.md ./packages/powerlines/package.json dist/packages/powerlines",
          "pnpm copyfiles --up=3 \"./packages/powerlines/schemas/*.capnp\" ./dist/packages/powerlines/schemas",
          "pnpm copyfiles --up=3 \"./packages/powerlines/files/**/*\" ./dist/packages/powerlines/files",
          "pnpm copyfiles --up=3 \"./packages/powerlines/dist/*.js\" \"./packages/powerlines/dist/*.d.ts\" \"./packages/powerlines/dist/*.cjs\" \"./packages/powerlines/dist/*.d.cts\" dist/packages/powerlines/dist",
          "pnpm copyfiles --up=3 \"./packages/powerlines/dist/types/**/*\" \"./packages/powerlines/dist/lib/**/*\" \"./packages/powerlines/dist/plugin-utils/**/*\" dist/packages/powerlines/dist"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "tags": ["platform:node"]
}
